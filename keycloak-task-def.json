{
    "family": "keycloak-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "keycloak",
            "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/keycloak:${IMAGE_TAG}",
            "cpu": 512,
            "memory": 1024,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                }
            ],
            "environment": [
                {
                    "name": "KEYCLOAK_ADMIN",
                    "value": "admin"
                },
                {
                    "name": "KEYCLOAK_ADMIN_PASSWORD",
                    "value": "supersecure"
                },
                {
                    "name": "KEYCLOAK_HTTP_PORT",
                    "value": "8080"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/keycloak",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "keycloak"
                }
            },
            "essential": true
        }
    ]
}