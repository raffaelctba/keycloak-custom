{
  "family": "spring-boot-app-task", 
  "containerDefinitions": [
    {
      "name": "springboot-container", 
      "image": "your-ecr-repository-uri/spring-boot-app:${IMAGE_TAG}", 
      "essential": true, 
      "memory": 1024, 
      "cpu": 512, 
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "${SPRING_PROFILES_ACTIVE}"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "${DATABASE_URL}"
        },
        {
          "name": "DATABASE_USERNAME",
          "valueFrom": "${DATABASE_USERNAME}"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "${DATABASE_PASSWORD}"
        },
        {
          "name": "SPRING_CLOUD_CONFIG_URI",
          "value": "${SPRING_CLOUD_CONFIG_URI}"
        },
        {
          "name": "SPRING_CLOUD_CONFIG_LABEL",
          "value": "${SPRING_CLOUD_CONFIG_LABEL}"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ]
    }
  ],
  "taskRoleArn": "arn:aws:iam::123456789012:role/your-task-role",
  "executionRoleArn": "arn:aws:iam::123456789012:role/your-execution-role",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024"
}
